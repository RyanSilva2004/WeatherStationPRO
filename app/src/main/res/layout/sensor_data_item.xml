<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="4"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/altitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altitude"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_altitude"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/altitudeMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 m"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/pressureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressure"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pressure"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/pressureMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1013 hPa"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_temperature"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/temperatureMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25Â°C"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_humidity"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/humidityMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60%"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/waterLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Level"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_water_level"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/waterLevelMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 m"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/windSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wind_speed"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/windSpeedMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 km/h"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/tile_background">

        <TextView
            android:id="@+id/rainStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rain Status"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rain_status"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/rainStatusMeasureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Rain"
            android:textSize="16sp"
            android:fontFamily="@font/intermed"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

</GridLayout>